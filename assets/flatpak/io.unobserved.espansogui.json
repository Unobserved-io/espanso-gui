{
  "app-id": "io.unobserved.espansoGUI",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "espansogui",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=xdg-xdg-config/espanso"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "espansogui",
      "builddir": true,
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/espansogui/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm644 ./assets/linux/io.unobserved.espansogui-128x128.png /app/share/icons/hicolor/128x128/apps/io.unobserved.espansogui.png",
        "install -Dm644 ./assets/linux/io.unobserved.espansogui-256x256.png /app/share/icons/hicolor/256x256/apps/io.unobserved.espansogui.png",
        "install -Dm644 ./assets/linux/org.squidowl.halloy.appdata.xml /app/share/metainfo/org.squidowl.halloy.appdata.xml",
        "install -Dm644 ./assets/linux/org.squidowl.halloy.desktop /app/share/applications/org.squidowl.halloy.desktop",
        "install -Dm755 ./target/release/halloy -t /app/bin/"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "./"
        }
      ]
    }
  ]
}
